datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Author {
  comments  Comment[]
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  name      String?
  posts     Post[]
  updatedAt DateTime  @updatedAt
}

model Comment {
  author    Author?  @relation(fields: [authorId], references: [id])
  authorId  String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  post      Post?    @relation(fields: [postId], references: [id])
  postId    String?
  text      String?
  updatedAt DateTime @updatedAt
}

model Category {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  posts     Post[]
  updatedAt DateTime @updatedAt
}

model Post {
  author      Author?   @relation(fields: [authorId], references: [id])
  authorId    String?
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  comments    Comment[]
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishedAt DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}
